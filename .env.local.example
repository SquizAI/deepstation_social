# Application
NEXT_PUBLIC_APP_URL=http://localhost:3055

# Supabase
NEXT_PUBLIC_SUPABASE_URL=your-supabase-url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# OAuth - LinkedIn
# Get credentials from: https://www.linkedin.com/developers/apps
# Redirect URI: {NEXT_PUBLIC_APP_URL}/auth/callback
LINKEDIN_CLIENT_ID=
LINKEDIN_CLIENT_SECRET=

# OAuth - Instagram/Facebook
# Get credentials from: https://developers.facebook.com
# Requires Facebook app with Instagram product enabled
# Redirect URI: {NEXT_PUBLIC_APP_URL}/auth/callback
FACEBOOK_APP_ID=
FACEBOOK_APP_SECRET=

# OAuth - Twitter/X
# Get credentials from: https://developer.x.com
# Requires OAuth 2.0 with PKCE enabled
# Redirect URI: {NEXT_PUBLIC_APP_URL}/auth/callback
TWITTER_CLIENT_ID=
TWITTER_CLIENT_SECRET=

# OAuth - Discord
# Get credentials from: https://discord.com/developers/applications
# Redirect URI: {NEXT_PUBLIC_APP_URL}/auth/callback
DISCORD_CLIENT_ID=
DISCORD_CLIENT_SECRET=

# OpenAI
OPENAI_API_KEY=

# Encryption (AES-256)
# MUST be exactly 32 characters for AES-256-GCM encryption
# Generate with: node -e "console.log(require('crypto').randomBytes(16).toString('hex'))"
ENCRYPTION_KEY=
