# Application
NEXT_PUBLIC_APP_URL=http://localhost:3055

# Supabase
NEXT_PUBLIC_SUPABASE_URL=your-supabase-url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# OAuth - LinkedIn
# Get credentials from: https://www.linkedin.com/developers/apps
# Redirect URIs (add both to LinkedIn app settings):
#   - {NEXT_PUBLIC_APP_URL}/auth/callback (unified)
#   - {NEXT_PUBLIC_APP_URL}/api/auth/linkedin/callback (platform-specific)
LINKEDIN_CLIENT_ID=
LINKEDIN_CLIENT_SECRET=

# OAuth - Instagram/Facebook
# Get credentials from: https://developers.facebook.com
# Requires Facebook app with Instagram product enabled
# Redirect URIs (add both to Facebook app settings):
#   - {NEXT_PUBLIC_APP_URL}/auth/callback (unified)
#   - {NEXT_PUBLIC_APP_URL}/api/auth/instagram/callback (platform-specific)
FACEBOOK_APP_ID=
FACEBOOK_APP_SECRET=

# OAuth - Twitter/X
# Get credentials from: https://developer.x.com
# Requires OAuth 2.0 with PKCE enabled
# Redirect URIs (add both to Twitter app settings):
#   - {NEXT_PUBLIC_APP_URL}/auth/callback (unified)
#   - {NEXT_PUBLIC_APP_URL}/api/auth/twitter/callback (platform-specific)
TWITTER_CLIENT_ID=
TWITTER_CLIENT_SECRET=

# OAuth - Discord
# Get credentials from: https://discord.com/developers/applications
# Redirect URIs (add both to Discord app settings):
#   - {NEXT_PUBLIC_APP_URL}/auth/callback (unified)
#   - {NEXT_PUBLIC_APP_URL}/api/auth/discord/callback (platform-specific)
DISCORD_CLIENT_ID=
DISCORD_CLIENT_SECRET=

# AI - OpenAI
OPENAI_API_KEY=

# AI - Gemini
GEMINI_API_KEY=

# AI - Anthropic (Claude)
ANTHROPIC_API_KEY=

# Encryption (AES-256)
# MUST be exactly 32 characters for AES-256-GCM encryption
# Generate with: node -e "console.log(require('crypto').randomBytes(16).toString('hex'))"
ENCRYPTION_KEY=
